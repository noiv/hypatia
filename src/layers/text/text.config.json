{
  "$schema": "./text.config.schema.json",
  "updateOrder": 100,
  "renderOrder": 2000,
  "font": {
    "url": "/fonts/inter-regular.ttf",
    "fallback": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Arial, sans-serif"
  },
  "size": {
    "default": 0.09,
    "min": 0.045,
    "max": 0.18,
    "step": 0.009
  },
  "color": {
    "default": 16777215,
    "graticule": 14737632,
    "pressure": 16777215
  },
  "outline": {
    "enabled": false,
    "width": 0.05,
    "color": 0,
    "opacity": 0.5
  },
  "hotkeys": {
    "increase": ["Meta+=", "Meta+Plus"],
    "decrease": ["Meta+-", "Meta+Minus"],
    "reset": ["Meta+0"]
  },
  "performance": {
    "characters": "HLhPa0123456789Â°NESW-+.,\n ",
    "updateOnlyWhenChanged": true,
    "frustumCulling": true,
    "cullDotThreshold": 0.0
  },
  "billboard": {
    "enabled": true,
    "sizeAttenuation": false
  },
  "positioning": {
    "graticuleRadiusMultiplier": 1.05,
    "pressureRadiusMultiplier": 1.0
  }
}

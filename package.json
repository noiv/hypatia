{
  "name": "hypatia",
  "version": "1.0.5",
  "description": "Interactive weather visualization with minute-accurate interpolation",
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 8080",
    "build": "tsc && vite build",
    "preview": "vite preview --host --port 8080",
    "download-data": "python3 scripts/download_dev_data.py",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "quality": "./scripts/check-quality-with-exemptions.sh",
    "quality:strict": "./scripts/check-quality.sh",
    "quality:full": "tsx scripts/check-code-quality.ts",
    "quality:report": "grep -r 'QC-OK\\|SAFE:\\|quality-check-exempt' src/ || echo 'No exemptions found'",
    "predeploy": "npm run quality",
    "prebuild": "npm run quality",
    "deploy:beta": "cd ../server/scripts && ./build-beta.sh && ./deploy-beta.sh"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^25.0.0",
    "mithril": "^2.2.2",
    "three": "^0.170.0",
    "troika-three-text": "^0.52.4"
  },
  "devDependencies": {
    "@types/mithril": "^2.2.7",
    "@types/three": "^0.170.0",
    "@types/tween.js": "^18.5.1",
    "@vitest/ui": "^4.0.10",
    "@webgpu/types": "^0.1.66",
    "happy-dom": "^20.0.10",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "$schema": "./schemas/hypatia-config.schema.json",
  "app": {
    "name": "Hypatia",
    "version": "0.1.0",
    "description": "Real-time global weather visualization"
  },
  "data": {
    "maxRangeDays": 3,
    "dataBaseUrl": "/data",
    "updateIntervalMs": 300000,
    "defaultResolution": "0p25"
  },
  "visualization": {
    "defaultCenter": [0, 0],
    "defaultZoom": 2,
    "maxZoom": 8,
    "minZoom": 1,
    "defaultAltitude": 20000000,
    "defaultLayers": ["earth", "sun", "graticule"]
  },
  "camera": {
    "minDistance": 1.157,
    "maxDistance": 10.0,
    "defaultDistance": 3.0,
    "dampingFactor": 0.05,
    "rotateSpeed": 0.5,
    "zoomSpeed": 0.8,
    "invertZoom": false,
    "rotationFriction": 0.92,
    "rotationSensitivity": 0.005,
    "minVelocity": 0.0001,
    "maxVelocity": 5.0,
    "doubleTapZoomFactor": 0.8,
    "doubleTapAnimationMs": 1000,
    "doubleTapThresholdMs": 300,
    "doubleTapDistanceThreshold": 30,
    "gestureTimeoutMs": 100,
    "timeScrubMinutesPerPixel": 1
  },
  "performance": {
    "workerCount": 4,
    "preloadCritical": true
  },
  "bootstrap": {
    "autoContinue": false
  },
  "dataCache": {
    "maxConcurrentDownloads": 4,
    "cacheStrategy": "future-first",
    "downloadMode": "on-demand"
  },
  "features": {
    "enableGeolocation": false
  },
  "ui": {
    "backgroundColor": "#161616"
  },
  "build": {
    "version": "0.1.0-dev",
    "hash": "dev",
    "timestamp": "1970-01-01T00:00:00Z"
  }
}
